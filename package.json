{
  "name": "php_codesniffer",
  "version": "1.1.1",
  "private": true,
  "description": "GitHub PHP_CodeSniffer action. This workflow check the PHP, CSS and Javascript files for the wanted coding standards.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --passWithNoTests",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Novusvetus/action-php_codesniffer.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Novusvetus",
  "license": "BSD-3",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "5.0.0",
    "@octokit/webhooks": "9.17.0",
    "picomatch": "2.3.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/picomatch": "2.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^8.1.0",
    "eslint-plugin-github": "^4.3.3",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "js-yaml": "^4.1.0",
    "prettier": "2.4.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  }
}
